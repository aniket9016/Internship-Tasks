@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-5 container">
    <!-- Hero Section -->
    <div class="jumbotron bg-primary text-white p-5 wrapper rounded text-center">
        <h1 class="display-4">Welcome to Our Platform!</h1>
        <p class="lead">Build and enhance your web applications with ASP.NET Core.</p>
        <a href="https://learn.microsoft.com/aspnet/core" class="btn btn-light btn-lg">Learn More</a>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQNXGuAAedBZV8NK7xKHY3UwU5NkCkdV5wXtA&s" class="card-img-top" alt="Tech Image">
                <div class="card-body">
                    <h5 class="card-title">ASP.NET Core</h5>
                    <p class="card-text">Develop fast, scalable, and secure web applications with ASP.NET Core.</p>
                    <a href="https://dotnet.microsoft.com/" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTCCWDDPbRQF67Tl-zbh2Pq77k64L-AEs1NFw&s" class="card-img-top" alt="Coding Image">
                <div class="card-body">
                    <h5 class="card-title">Modern UI</h5>
                    <p class="card-text">Create interactive and responsive UIs with Bootstrap & Razor Pages.</p>
                    <a href="https://getbootstrap.com/" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg">
                <img src="https://www.hurix.com/wp-content/uploads/2022/01/Cyber-security.jpg" alt="Security Image">
                <div class="card-body">
                    <h5 class="card-title">Secure Apps</h5>
                    <p class="card-text">Implement authentication & authorization for secure applications.</p>
                    <a href="https://learn.microsoft.com/en-us/aspnet/core/security" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-5 text-center">
        <h2>Start Building Today!</h2>
        <p class="text-muted">Join thousands of developers creating amazing applications with ASP.NET Core.</p>
        <a href="https://dotnet.microsoft.com/en-us/download/dotnet" class="btn btn-success btn-lg">Download .NET</a>
    </div>
</div>
