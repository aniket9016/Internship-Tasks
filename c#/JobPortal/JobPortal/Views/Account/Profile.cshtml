@model JobPortal.Models.ApplicationUser

<h2>My Profile</h2>

<p><strong>Full Name:</strong> @Model.FullName</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Phone:</strong> @Model.PhoneNumber</p>

<a href="/Account/EditProfile" class="btn btn-warning">Edit Profile</a>
<a href="/Account/DeleteAccount" class="btn btn-danger">Delete Account</a>
<a href="/Account/Logout" class="btn btn-secondary">Logout</a>
