@model IEnumerable<StudentCourseSubscriptionMVCCRUD.Models.Subscription>
@if (TempData["SuccessMessage3"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMessage3"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage1"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMessage1"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary">Subscription List</h2>
            <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                <i class="fas fa-user-plus"></i> Add New Subscription
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.SubscriptionID)</th>
                        <th>@Html.DisplayNameFor(m => m.Student.StudentName)</th>
                        <th>@Html.DisplayNameFor(m => m.Course.CourseName)</th>
                        <th>@Html.DisplayNameFor(m => m.Status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.SubscriptionID)</td>
                            <td>@Html.DisplayFor(m => item.Student.StudentName)</td>
                            <td>@Html.DisplayFor(m => item.Course.CourseName)</td>
                            <td>@Html.DisplayFor(m => item.Status)</td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", new { id = item.SubscriptionID })" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.SubscriptionID })" class="btn btn-info btn-sm text-white">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    @using (Html.BeginForm("Delete", "Subscription", new { id = item.SubscriptionID }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this student?');" }))
                                    {
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>