@model StudentCourseSubscriptionMVCCRUD.Models.Subscription

@{
    ViewBag.Title = "Subscription Details";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary mb-4">Subscription Details</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th class="bg-light text-dark">@Html.DisplayNameFor(model => model.StudentID)</th>
                        <td>@Html.DisplayFor(model => model.Student.StudentName)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">@Html.DisplayNameFor(model => model.CourseID)</th>
                        <td>@Html.DisplayFor(model => model.Course.CourseName)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">@Html.DisplayNameFor(model => model.Status)</th>
                        <td>
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Edit", new { id = Model.SubscriptionID })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
