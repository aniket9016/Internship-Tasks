@model HospitalManagementSystem.Models.Doctor

<form id="doctorForm">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Specialization</label>
        <input type="text" class="form-control" asp-for="Specialization" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Contact</label>
        <input type="text" class="form-control" asp-for="Contact" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" required />
    </div>

    <button type="button" class="btn btn-success" onclick="saveDoctor()">Save</button>
</form>
